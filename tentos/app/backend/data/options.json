      "sensors": {
        "temperature": "sensor.veg_tent_temperature",
        "humidity": "sensor.veg_tent_humidity"
      },
      "actuators": {
        "light": "switch.veg_tent_light",
        "exhaust_fan": "switch.veg_tent_exhaust"
